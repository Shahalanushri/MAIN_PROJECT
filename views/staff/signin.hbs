<style>
    body {
        background-image: url('/images/login.png');
        background-size: cover;
        background-repeat: no-repeat;
        background-clip: content-box;
    }
</style>
<main class="">
    <div class="container">



        <div class="row justify-content-center">
            <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">
                <br><br><br><br><br>
                <div class="d-flex justify-content-center py-4">
                    <a href="index.html" class="logo d-flex align-items-center w-auto">
                        <h4 class="text-white">Welcome Staff</h4>
                    </a>
                </div><!-- End Logo -->

                <div class="card mb-3 p-2">
                    <div class="card-body">
                        <div class="pt-0 mb-3 pb-2">
                            <p class="">Please Login with your details to
                                continue with your Dashboard</p>

                        </div>
                        {{#if signInErr}}
                        <p style="font-size: 12px;" class="text-center text-danger">{{signInErr}}</p>
                        {{/if}}

                        <form class="row g-3 needs-validation" action="/staff/signin" method="POST">

                            <div class="col-12">
                                <input type="text" name="username" class="form-control" id="username"
                                    placeholder="Your Username" required>
                            </div>

                            <div class="col-12">
                                {{!-- <label for="yourPassword" class="form-label">Password</label> --}}
                                <input type="password" name="password" class="form-control" id="yourPassword"
                                    placeholder="Password" required>
                                <div class="invalid-feedback">Please enter your password!</div>
                            </div>
                            {{!--
                            <div class="col-12">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="remember" value="true"
                                        id="rememberMe">
                                    <label class="form-check-label" for="rememberMe">Remember me</label>
                                </div>
                            </div> --}}
                            <div class="col-12">
                                <button class="btn btn-primary w-100" type="submit">Login</button>
                            </div>
                            <div class="col-12">
                                <div class=" text-dark mb-0"> <a href="/">Back to home</a></div>
                            </div>
                        </form>

                    </div>
                </div>



            </div>
        </div>
    </div>


</main><!-- End #main -->