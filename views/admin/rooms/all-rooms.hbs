<main id="main" class="main">

    <div class="pagetitle">
        <h1>Manage Rooms</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                <li class="breadcrumb-item">Rooms</li>
                <li class="breadcrumb-item active">All-Rooms</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="card-title">All Rooms</h5>
                            <a href="/admin/rooms/add-room" class="btn btn-dark">+ Add New Room</a>
                        </div>

                        <div class="table-responsive">
                            <table class="table datatable border table-bordered">
                                <thead>
                                    <tr>
                                        <th>No.</th>
                                        <th>Created Date</th>
                                        <th>Room Details</th>
                                        <th>Images</th>
                                        <th>Time</th>
                                        <th>Em Phone</th>
                                        <th>Manage</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each rooms}}
                                    <tr>
                                        <td>{{incremented @index}}</td>
                                        <td>{{formatDate this.createdAt}}</td>
                                        <td>
{{!-- 
                                            <p class="mb-0"><b>Room Name : </b>{{this.roomname}}</p> --}}
                                            <p class="mb-0"><b>Room Number : </b>{{this.roomnumber}}</p>
                                            <p class="mb-0"><b> Category : </b>{{this.categoryName}}</p>
                                            <p class="mb-0"><b> Price : </b>{{this.Price}}/-</p>
                                            <p class="mb-0"><b> Adv : </b>{{this.AdvPrice}}/-</p>

                                        </td>
                                        <td>
                                            <a href="/images/room-images/{{this._id}}-1.png">
                                                <img src="/images/room-images/{{this._id}}-1.png" alt=""
                                                    style="width: 2rem">
                                            </a>

                                            <a href="/images/room-images/{{this._id}}-2.png">
                                                <img src="/images/room-images/{{this._id}}-2.png" alt=""
                                                    style="width: 2rem">
                                            </a><br>

                                            <a href="/images/room-images/{{this._id}}-3.png">
                                                <img src="/images/room-images/{{this._id}}-3.png" alt=""
                                                    style="width: 2rem">
                                            </a>

                                            <a href="/images/room-images/{{this._id}}-1.png">
                                                <img src="/images/room-images/{{this._id}}-1.png" alt=""
                                                    style="width: 2rem">
                                            </a><br>

                                            <a href="/images/room-images/{{this._id}}-5.png">
                                                <img src="/images/room-images/{{this._id}}-5.png" alt=""
                                                    style="width: 2rem">
                                            </a>

                                        </td>
                                        <td>

                                            <p class="mb-0"><b>Check in : </b>{{this.in}}</p>

                                            <p class="mb-0"><b> Check out : </b>{{this.out}}</p>

                                        </td>
                                        <td>{{this.ren}}</td>

                                        <td>
                                            <div class="d-flex gap-2">

                                                <a href="/admin/rooms/edit-room/{{this._id}}"
                                                    class="btn btn-dark btn-sm"><i class="bi bi-pen"></i></a>

                                                <form action="/admin/rooms/delete-room/{{this._id}}" method="POST">
                                                    <button type="submit"
                                                        onclick="return confirm('Are You Sure to Delete This Room ?')"
                                                        class="btn btn-danger btn-sm"><i
                                                            class="bi bi-trash"></i></button>
                                                </form>
                                            </div>
                                        </td>

                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </section>

</main><!-- End #main -->